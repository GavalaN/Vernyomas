<Window x:Class="Vernyomasnaplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vernyomasnaplo"
        mc:Ignorable="d"
        Title="Vérnyomásnapló" Height="450" Width="800" FontSize="16" Loaded="Window_Loaded" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dtgAdatok" Grid.Column="1" Margin="20"/>
        <StackPanel Grid.Column="0" Margin="20">
            <Button x:Name="btnFelvetel" Content="Felvétel" Margin="10 20" Click="btnFelvetel_Click"/>
            <Button x:Name="btnModositas" Content="Módosítás" Margin="10 20" Click="btnModositas_Click"/>
            <Button x:Name="btnTorles" Content="Törlés" Margin="10 20" Click="btnTorles_Click"/>
            <Button x:Name="btnMentes" Content="Mentés" Margin="10 20" Click="btnMentes_Click"/>
            <Button x:Name="btnKilepes" Content="Kilépés" Margin="10 20" Click="btnKilepes_Click"/>
        </StackPanel>
    </Grid>
</Window>
